{
    "manifest_version": 3,
    "name" : "Meeting Buddy Extension",
    "version": "1.0",
    "action":{
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "activeTab"
    ],
    "host_permissions": [
        "https://meet.google.com/*"
    ],
    "background": {
        "service_worker": "dist/background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://meet.google.com/*"],
            "js": ["dist/contentScript.js"]
        }
    ]
}